@model IEnumerable<GTC13357.Models.CourseType>
@{

}
<div class="container-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="head_GTC_h">List of courses</h2>
        </div>
        <div class="col-6">

        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table style="border-style:solid;">
            <thead>
                <tr>
                    <th style="border-style:solid;">Id</th>
                    <th style="border-style:solid;">Type Name</th>
                    <th style="border-style:solid;">Points</th>
                    

                </tr>
            </thead>
            <tbody>
                @foreach (var courseType in Model)
                {
                <tr>
                    <td style="border-style:solid;">@courseType.Id</td>
                    <td style="border-style:solid;">@courseType.Type_Name</td>
                    <td style="border-style:solid;">@courseType.Points</td>
                   
                </tr>


                }



            </tbody>

        </table>
    }
    else
    {
        <p>No course types yet!</p>
    }

</div>