@model GTC13357.Models.Course

@{
}
<div class="container-fluid">
    <h1 class="head_GTC_h">Edit course data:</h1>
    <form asp-action="Edit" asp-controller="Course" method="post">
        <input asp-for="Id" hidden /> 
        <div class="mb-3">
            <span asp-validation-for="First_Name" class="text-danger"></span>
            <input class="inpt_GTC form-control" placeholder="Your name" asp-for="First_Name" />
        </div>
        <div class="mb-3">
            <span asp-validation-for="Surname" class="text-danger"></span>
            <input class="inpt_GTC form-control" placeholder="Your Surname" asp-for="Surname" />
        </div>
        <div class="mb-3">
            <span asp-validation-for="Hours" class="text-danger"></span>
            <input class="inpt_GTC form-control" placeholder="Number of hours" asp-for="Hours" />
        </div>
        <div class="mb-3">
            <input type="submit" value="update" />
        </div>
    </form>
</div>